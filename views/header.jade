doctype html
html
	head
		if page == "home"
			title #{config.name} &mdash; #{config.description}
		else
			for option in config.navigation
				if option.slug == page
					title #{config.name} &mdash; #{option.name}

		link(href='/styles/style.css', rel='stylesheet')
		link(href='/images/yossarian.ico', rel='shortcut icon')

		script(src='/scripts/libs/modernzr.custom.11163.js')
		script(src='/scripts/libs/angular.min.js')
	body

		header 
			a.header-brand(href="/" title='#{config.name} - Back home' )
				include branding.jade

			//- .header-search
				input(type='search' placeholder='Search')
				button
					i.fa.fa-search

			.header-user
				i.fa.fa-user
				span #{user.username}

				ul.header-user-menu
					li
						a(href='/profile') 
							i.fa.fa-male
							span Profile
					li
						a(href='/logout')
							i.fa.fa-sign-out
							span Logout  

			nav.header-nav
				ul
					for option in config.navigation 
						if option.slug == page 
							if option.slug == 'dashboard' || !option.slug
								li(id='#{option.slug}').active
									a(href='/' title='Dashboard'): i(class='fa fa-#{option.icon}')
							else
								li(id='#{option.slug}').active
									a(href='/#{option.slug}' title='#{option.name}'): i(class='fa fa-#{option.icon}')
						else
							if option.slug == 'dashboard' || !option.slug
								li(id='#{option.slug}')
									a(href='/' title='Dashboard'): i(class='fa fa-#{option.icon}')
							else
								li(id='#{option.slug}')
									a(href='/#{option.slug}' title='#{option.name}'): i(class='fa fa-#{option.icon}')
